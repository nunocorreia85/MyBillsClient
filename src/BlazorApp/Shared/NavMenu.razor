    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
    </ul>
    <div class="separator"></div>
    <AuthorizeView>
        <ul class="nav flex-column">
            @*<li class="nav-item px-3">
                    <NavLink class="nav-link" href="categories">
                        <span class="oi oi-plus" aria-hidden="true"></span>Categories
                    </NavLink>
                </li>*@
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="transactions">
                    <span class="oi oi-plus" aria-hidden="true"></span>Bank Transactions
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="account">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Account
                </NavLink>
            </li>
        </ul>
